{
  "name": "@readme/variable",
  "description": "React component for ReadMe user data variables",
  "version": "13.6.1",
  "main": "dist/index.js",
  "author": "Dom Harrington <dom@harrington-mail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/readmeio/variable.git"
  },
  "engines": {
    "node": "^12 || ^14 || ^16",
    "npm": "^7"
  },
  "scripts": {
    "build": "webpack",
    "lint": "eslint . --ext .jsx --ext .js",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.{js,jsx}\"",
    "release": "npx conventional-changelog-cli -i CHANGELOG.md -s && git add CHANGELOG.md",
    "test": "jest --coverage"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@readme/eslint-config": "^8.0.2",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "react": "^16.14.0",
    "terser-webpack-plugin": "^5.2.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1"
  },
  "prettier": "@readme/eslint-config/prettier",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        "Infinity"
      ],
      "footer-max-line-length": [
        0,
        "always",
        "Infinity"
      ]
    }
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/index.js",
        "maxSize": "5KB"
      }
    ]
  }
}
